extern fun malloc(size: int) str
extern fun free(buffer: str) void

extern fun putchar(string_: char) void
extern fun puts(string_: str) void

import std.fmt

fun print(int_: int) void {
    let decimal: str = std.fmt.to_decimal(int_)

    puts(decimal)

    free(decimal)
}

fun print(bool_: bool) void {
    if bool_ {
        puts("true")
    }
    else {
        puts("false")
    }
}

fun print(char_: char) void {
    putchar(char_)
}

fun print(string_: str) void {
    puts(string_)
}